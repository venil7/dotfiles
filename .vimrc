execute pathogen#infect()
syntax on
filetype plugin indent on

set number
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set nocompatible
set modelines=0
set encoding=utf-8
set scrolloff=3
set autoindent
set showmode
set showcmd
set hidden
set wildmenu
set wildmode=list:longest
set visualbell
set ttyfast
set ruler
set backspace=indent,eol,start
set laststatus=2
set undofile
set undodir=~/.vim/undo//

set runtimepath^=~/.vim/bundle/ctrlp.vim

